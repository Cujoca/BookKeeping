# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Home -> Dashboard
GET     /                           controllers.HomeController.index()

# Dashboard
GET     /dashboard                  controllers.DashboardController.dashboard()

# Accounts
GET     /accounts                   controllers.AccountsController.list()
GET     /accounts/add               controllers.AccountsController.add()

# Transactions
GET     /transactions               controllers.TransactionsController.list()
GET     /transactions/add           controllers.TransactionsController.add()

#Files
GET     /file                       controllers.UploadController.goToUpload()

# Reports
GET     /reports                    controllers.ReportsController.index()

# Settings
GET     /settings                   controllers.SettingsController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
